Option Compare Database
Option Explicit

Private m_HasValue As Boolean
Private m_Value As Double

Public Property Get HasValue() As Boolean
    HasValue = m_HasValue
End Property

Public Property Get Value() As Double
    If Not m_HasValue Then
        Err.Raise 1, "DoubleQ.Value", "Nullable object has no value."
    Else
        Value = m_Value
    End If
End Property

Public Property Let SetValue(Value As Variant)
Attribute SetValue.VB_UserMemId = 0
    m_HasValue = False
    If Not IsNull(Value) Then
        m_Value = CDbl(Value)
        m_HasValue = True
    End If
End Property

Public Property Get SetValue() As Variant
    If m_HasValue Then
        SetValue = m_Value
    Else
        SetValue = Null
    End If
End Property
